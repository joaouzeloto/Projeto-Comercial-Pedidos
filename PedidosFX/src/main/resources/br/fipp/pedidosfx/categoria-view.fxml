<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="625.0" prefWidth="642.0" spacing="10.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.fipp.pedidosfx.CategoriaViewController">
    <children>
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <TextField fx:id="tfPesquisa" onKeyTyped="#onPesquisarC" prefHeight="31.0" prefWidth="584.0" promptText="Digite o nome da categoria">
                    <font>
                        <Font size="15.0" />
                    </font>
                </TextField>
                <Button mnemonicParsing="false" onAction="#onNovaCategoria" prefHeight="32.0" prefWidth="32.0" style="-fx-background-color: lightblue;" text="+" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="tableView" prefHeight="525.0" prefWidth="629.0">
            <columns>
                <TableColumn fx:id="colID" maxWidth="309.5999878048897" minWidth="50.0" prefWidth="203.999966442585" text="ID" />
                <TableColumn fx:id="colNome" minWidth="30.399993896484375" prefWidth="223.2000274658203" text="CATEGORIA" />
                <TableColumn fx:id="colDescricao" prefWidth="197.60009765625" text="DESCRIÇÃO" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAlterar" text="Alterar" />
                        <MenuItem mnemonicParsing="false" onAction="#onApagar" text="Apagar" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <Button mnemonicParsing="false" onAction="#onFechar" prefHeight="30.0" prefWidth="127.0" style="-fx-background-color: white;" text="Fechar">
            <font>
                <Font size="15.0" />
            </font></Button>
    </children>
</VBox>
