<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="346.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.fipp.pedidosfx.ProdutoCadViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label layoutX="20.0" layoutY="20.0" text="Nome">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfNome" layoutX="20.0" layoutY="40.0">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label layoutX="20.0" layoutY="81.0" text="Preco">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfPreco" layoutX="20.0" layoutY="101.0">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label layoutX="20.0" layoutY="132.0" text="Estoque">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfEstoque" layoutX="20.0" layoutY="152.0">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label layoutX="20.0" layoutY="183.0" text="ID Categoria">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfIdCategoria" layoutX="20.0" layoutY="203.0">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <HBox prefHeight="20.0" prefWidth="479.0" />
    <HBox alignment="CENTER" prefHeight="38.0" prefWidth="479.0" spacing="80.0">
        <children>
            <Button mnemonicParsing="false" onAction="#onConfirmar" prefHeight="43.0" prefWidth="99.0" style="-fx-background-color: lightblue;" text="Confirmar">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Button>
            <Button layoutX="201.0" layoutY="22.0" mnemonicParsing="false" onAction="#onCancelar" prefHeight="43.0" prefWidth="99.0" style="-fx-background-color: orange;" text="Cancelar">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Button>
        </children>
    </HBox>
</VBox>
