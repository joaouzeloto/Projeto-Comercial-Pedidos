<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="316.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.fipp.pedidosfx.CategoriaCadViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="ID">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfIdC">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label layoutX="20.0" layoutY="20.0" text="Categoria">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfCategoria" layoutX="20.0" layoutY="40.0">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <Label text="Descrição">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="tfDescricao">
        <font>
            <Font size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </TextField>
    <HBox prefHeight="38.0" prefWidth="479.0" />
    <HBox alignment="CENTER" prefHeight="38.0" prefWidth="479.0" spacing="80.0">
        <children>
            <Button mnemonicParsing="false" onAction="#onConfirmar" prefHeight="43.0" prefWidth="99.0" style="-fx-background-color: lightblue;" text="Confirmar">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Button>
            <Button layoutX="201.0" layoutY="22.0" mnemonicParsing="false" onAction="#onCancelar" prefHeight="43.0" prefWidth="99.0" style="-fx-background-color: orange;" text="Cancelar">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Button>
        </children>
    </HBox>
</VBox>
